<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:focusable="false">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_item_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="4dp"
        android:padding="1dp"
        android:src="@drawable/default_chat_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundStyle2"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/chat_title_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp"
        android:padding="5dp"
        android:textSize="23sp"
        android:translationX="70dp"
        android:translationY="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_item_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chat_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="10dp"
        android:text="@string/default_chat_intro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_item_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>